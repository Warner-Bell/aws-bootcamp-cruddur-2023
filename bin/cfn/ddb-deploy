#! /usr/bin/env bash
set -e # stop the execution of the script if it fails

FUNC_DIR="/workspace/aws-bootcamp-cruddur-2023/aws/lambdas/cruddur-messaging-stream/"
TEMP_PATH="/workspace/aws-bootcamp-cruddur-2023/aws/cfn/ddb/template.yaml"
CONFIG_PATH="/workspace/aws-bootcamp-cruddur-2023/aws/cfn/ddb/config.toml"
ARTIFACT_BUCKET="cldfrmn-artifacts"
sam build \
--config-file $CONFIG_PATH \
--template-file $TEMP_PATH \
--base-dir $FUNC_DIR \
#--parameter-overrides

TEMPLATE_PATH="/workspace/aws-bootcamp-cruddur-2023/workspace/aws-bootcamp-cruddur-2023/.aws-sam/build/template.yaml"
OUTPUT_TEMPLATE_PATH="/workspace/aws-bootcamp-cruddur-2023/workspace/aws-bootcamp-cruddur-2023/.aws-sam/build/packaged.yaml"

sam package \
--s3-bucket $ARTIFACT_BUCKET \
--config-file $CONFIG_PATH \
--output-template-file $OUTPUT_TEMPLATE_PATH \
--template-file $TEMP_PATH \
--s3-prefix "ddb"

sam deploy